@model MovieDetailsModel;

<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <hr />
        </div>
        <div class="mb-3">
            <label asp-for="MovieId"> Movie ID </label>
            <input asp-for="MovieId" class="form-control" />
            <span asp-validation-for="MovieId" class="text-danger"></span>
        </div>
        <h4 class="text-decoration-underline">Or you can search with Salon ID as well</h4>
        <div class="mb-3">
            <label asp-for="SalonId"> Salon ID</label>
            <input asp-for="SalonId" class="form-control" />
            <span asp-validation-for="SalonId" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary " style="width:150px">Search</button>
        <a href="/Home/Index" class="btn btn-secondary" style="width:150px">
            Back to List
        </a>
    </div>
</form>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
    }